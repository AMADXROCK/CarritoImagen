
@{
    Layout = null;
}
@using CarritoImagen.Models

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="table-responsive img img-responsive">
            <table class="table table-striped table-bordered table-hover" border="1" align="center">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                    <th>Comprar</th>
                </tr>
                @foreach (Productos p in ViewBag.listProducts)
                {
                    <tr>

                        <td align="center">@p.ID_Producto</td>
                        <td align="center">@p.Nombre</td>
                        <td align="center">@p.Precio</td>
                        
                        <td align="center"><img src="~/Img/@p.Imagen" class="img img-rounded" alt=""/></td>
                        <td align="center">
                            @Html.ActionLink("Ordernar Ahora",
                                   "ordenar_ahora", "Compras", new { id = p.ID_Producto }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
</body>
</html>
